# Calendar Copilot Environment Variables
# Copy this file to .env in the root of the monorepo and/or to apps/web/.env.local

# =============================================================================
# SHARED CONFIGURATION (For both Web App and MCP Server)
# =============================================================================

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Service Account (required for calendar operations)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
# Note: Make sure to preserve newlines with \n in the private key

GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here...\n-----END PRIVATE KEY-----\n"

# =============================================================================
# WEB APP SPECIFIC CONFIGURATION
# =============================================================================

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key

# Clerk OAuth URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk SSO Callback handling
CLERK_OAUTH_CALLBACK_URL_TEMPLATE=http://localhost:3000/auth/sso-callback
NEXT_PUBLIC_CLERK_SIGN_IN_URL_REDIRECT=/dashboard

# API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# =============================================================================
# MCP SERVER SPECIFIC CONFIGURATION
# =============================================================================

# MCP Server Configuration
PORT=3100
MCP_SERVER_URL=http://localhost:3100
REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Next.js Web App URL (for redirects)
NEXT_PUBLIC_WEB_APP_URL=http://localhost:3000 